@model BloodProject.Models.AcceptorAccess

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}

<div id="formacc">
    <h4 style="color:#dd3d3d">Plz Insert Your Data</h4>
    @*@using (Html.BeginForm())
    {*@
        @using (Ajax.BeginForm("Create", null, new AjaxOptions()
        {
            UpdateTargetId = "UpdatePanelacc",
            HttpMethod = "Post",
            InsertionMode = InsertionMode.Replace,
            
        }, htmlAttributes: new { @id = "formacc" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group hidden" >
                @Html.LabelFor(model => model.DonorId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.DonorId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DonorId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.phone, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Get Contact Info" class="btn btn-default" onclick="hide()" />
                </div>
            </div>
        </div>
    }


  
</div>
