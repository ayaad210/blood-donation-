@section Scripts {
<script type="text/javascript">
  (function con() {
      var mes = getUrlParameter("mes");
      $(".alert").hide();
      if (mes != "") {

          $(".alert").show();

          if (mes != "x") {


              $(".alertpar").append("You must wait three months between donations");
              $(".alertpar").append("<br/>   you have about " + mes + " months left for the next donation ");

          }
          setTimeout(function () {

              $(".alert").fadeOut();


          }, 10000);


         
      }

        }
    )();

    function getUrlParameter(name) {
        name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
        var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
        var results = regex.exec(location.search);
        return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
    };
</script>

