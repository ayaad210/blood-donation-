<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <script src="~/Scripts/modernizr-2.6.2.js"></script>*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/bootstrap-theme")
    <style>
            .mycol{
           background-color:rgb(221,72,20);
           color:white;
       }
    </style>
</head>
  @*style="background-image:url(../../Content/Images/1.jpg); background-repeat: no-repeat;background-size: auto;*@
<body >
    <div class="mycol navbar navbar navbar-fixed-top" >
        <div class="container" style="color:white">
            <div class="navbar-header">
                <button type="button" class="mycol navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" , @style = "color:white" })
                <a href="~/contacts/create" class = "navbar-brand" , style = "color:white"  >Contacts</a>
            </div>  @*LayOUt 2*@
            <div class="navbar-collapse collapse right">
                <ul class="nav navbar-nav nav navbar-right">
                    <li><a href='https://www.google.com/maps/search/%D9%85%D8%B3%D8%AA%D8%B4%D9%81%D9%8A%D8%A7%D8%AA%E2%80%AD%E2%80%AD%E2%80%AD/31.2296053,29.9599696,15z/data=!3m1!4b1?hl=ar' class="navbar-brand" , style="color:white">Maps</a></li>
                    <li>@Html.ActionLink("Search For Donators", "DonationListView", "Donations", null, new { @class = "navbar-brand" , @style = "color:white" })</li>
                    <li>@Html.ActionLink("Donate Now", "create", "Donations", null, new { @class = "navbar-brand", @style = "color:white" })</li>
                    <li>@Html.ActionLink("Manage", "index", "Donations", null, new { @class = "navbar-brand", @style = "color:white" })</li>


                </ul>
            </div>
        </div>
    </div>

    <div class="body-content">
        @RenderBody()
       
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>*@


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>